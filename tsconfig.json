{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "outDir": "build/dist",
    "sourceMap": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2017"
    ],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "types": [
      "react",
      "react-native",
      "node"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "exclude": [
    ".archive/**/*",
    "node_modules"
  ]
}